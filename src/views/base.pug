doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        
        title #{pageTitle}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        nav 
            ul
                if loggedInUser
                    li 
                        a(href="/logout") Logout
                    li 
                        a(href="/video/upload") Upload 
                    li 
                        a(href=`/user/${loggedInUser._id}`) Profile                    
                else
                    li 
                        a(href="/login") Login
                    li 
                        a(href="/join") Join               

                li 
                    a(href="/") Home

                
        main
            
            header
                h1=pageTitle 
            block content