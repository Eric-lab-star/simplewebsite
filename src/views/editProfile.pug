extends base

block content
    if errorMessage 
        span=errorMessage
    
    form(method="post",enctype="multipart/form-data")
        img(src="/" + loggedInUser.avatarUrl , width="200", height="300")
        label(for="uploadProfile") Upload 
        input(type="file", accept="image/*", name="uploadProfile", id="uploadProfile")
        input(type="text", value=loggedInUser.username, placeholder="username", name="username", required)
        input(type="text", value=loggedInUser.name, placeholder="name", name="name", required)
        input(type="email", value=loggedInUser.email, placeholder="email", name="email", required)
        input(type="submit", value="Edit")