extends base

block content
    form(method="post" )
        label(for="video") Upload Video
        input(type="file", name="video", id="video", accept="video/*",)
        input(type="text", placeholder="Title", name="title", maxlength=20, required, value=video.title)
        input(type="text", placeholder="Describtion", name="description", maxlength=20, required, value=video.description)
        input(type="text", placeholder="Hashtag", name="hashtag", maxlength=20, required, value=video.hashtag.join())                
        input(type="submit", value="Upload")