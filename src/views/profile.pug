extends base
include mixins/video

block content
    div.profileContents
        div.userInfo
            if loggedInUser.avatarUrl
                img(src=loggedInUser.avatarUrl)
            else 
                span ðŸ¤¤
            div.userDesc
                div Username: #{user.username}
                div Name: #{user.name} 
                div Email: #{user.email}
        div.videogrid
            each video in user.videos
                +video(video)
            else
                span No video, upload your videos! 
        div.editLink
            a(href=`${user.id}/edit`) Edit Profile &rarr;
        